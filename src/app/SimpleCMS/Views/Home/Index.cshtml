@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model) {
    <div class="post">
        <b>@item.Title</b>
        <p>@item.Body</p>
        <div class="author">
            posted by @item.Author.UserName 
            @@ @item.CreatedDate.FriendlyDate()
        </div>
        <div class="clear"></div>
    </div>
}