<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataAnnotations.css")" rel="stylesheet" type="text/css" />
    <!--[if ie 9]>
    <style type="text/css" media="screen">
        div.post
        {
            filter: none;
        }
    </style>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function deleteRecord(url, confirm_text) {
            if (!confirm(confirm_text)) return false;
            $.ajax({
                type: 'POST',
                url: url,
                success: refreshPage
            });
        }
        function refreshPage() {
            window.location.reload();
        }
    </script>
</head>
<body>
    <div class="top">
        <div class="top_container">
            <div class="logo">
                @Html.ActionLink("SimpleCMS", "Index", "Home")
            </div>
            <div class="menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                </ul>
                <div class="clear">
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
    <div class="middle">
        <div class="content">
            <div class="messages">
                <div class="notice">
                    Notification
                </div>
                <div class="error">
                    Error
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
    <div class="footer"></div>
</body>
</html>